pipeline {
    agent any

    stages {
        stage('clonar repositÃ³rio') {
            steps {
                git branch: 'main', url: 'https://github.com/fabiocaraujo/testes-e2e-ebac-shop.git'
            }
        }
    }
}

stages {
        stage('instalar dependencias') {
            steps {
               sh 'npm install'
            }
        }
    }



stages {
        stage('executar testes') {
            steps {
              sh 'NO_COLOR=1 npm run cy:run'
            }
        }
    }


